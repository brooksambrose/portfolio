@article{Allington2016Linguistic,
	title = {Linguistic {Capital} and {Development} {Capital} in a {Network} of {Cultural} {Producers}: {Mutually} {Valuing} {Peer} {Groups} in the ‘{Interactive} {Fiction}’ {Retrogaming} {Scene}},
