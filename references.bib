	journal = {Cultural Sociology},
	author = {Bull, Anna and Scharff, Christina},
	month = sep,
	year = {2017},
	pages = {283--301}
}

@article{Glevarec2017Cultural,
	title = {Is {Cultural} {Eclecticism} {Axiological} and a {New} {Mark} of {Distinction}? {Cultural} {Diversification} and {Social} {Differentiation} of {Tastes} in {France}},
