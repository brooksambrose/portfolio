}

@article{zucker_defacto_2014,
	title = {Defacto and {Deeded} {Intellectual} {Property}: {Knowledge}-{Driven} {Co}-{Evolution} of {Firm} {Collaboration} {Boundaries} and {IPR} {Stragtegy}},
